{
  "buildCommand": "npx vite build",
  "outputDirectory": "dist",
  "framework": "vite",
  "ignoreCommand": "[ \"$VERCEL_GIT_COMMIT_REF\" != \"main\" ]",
  "functions": {
    "api/claude.js": {
      "maxDuration": 120
    }
  },
  "rewrites": [
    {
      "source": "/api/gamma/:path*",
      "destination": "https://gamma-api.polymarket.com/:path*"
    },
    {
      "source": "/api/clob/:path*",
      "destination": "https://clob.polymarket.com/:path*"
    },
    {
      "source": "/api/data/:path*",
      "destination": "https://data-api.polymarket.com/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
